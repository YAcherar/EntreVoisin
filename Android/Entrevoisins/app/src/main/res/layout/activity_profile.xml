<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical"
    tools:context=".controller.ProfileActivity">

    <ImageView
        android:id="@+id/avatar_ImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        android:contentDescription="Avatar neighbour"
        android:src="@drawable/ic_account" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:text="Caroline"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_yellow_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline"/>


    <TextView
        android:id="@+id/name_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="3dp"
        android:text="Caroline"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="@id/guideline"/>

    <TextView
        android:id="@+id/address_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/ic_location"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:text="Saint pierre du mont à 5km"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/guideline"
        android:layout_marginTop="65dp"/>

    <TextView
        android:id="@+id/phoneNumber_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:text="+33 6 86 57 90 14"
        android:textStyle="bold"
        android:layout_marginTop="114dp"
        app:layout_constraintTop_toTopOf="@id/guideline"/>

    <TextView
        android:id="@+id/link_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:drawableLeft="@drawable/ic_media"
        android:drawablePadding="15dp"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:text="www.facebook.fr/caroline"
        android:textStyle="bold"
        android:layout_marginTop="163dp"
        app:layout_constraintTop_toTopOf="@id/guideline"/>

    <TextView
        android:id="@+id/aboutMe_TextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="3dp"
        android:text="A propos de moi"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="@id/guideline"/>

    <TextView
        android:id="@+id/aboutMe_TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorWhite"
        android:paddingStart="15dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:scrollbars="vertical"
        android:text="Bonjours ! Je souaiterais faire de la marche nordique. Pas initiées, je recherche une ou plusieurs personnes susceptibles de m'accompagner ! J'aime les jeux de cartes tels la belote et le tarot..."
        android:textStyle="bold"
        android:layout_marginTop="290dp"
        app:layout_constraintTop_toTopOf="@id/guideline"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

</android.support.constraint.ConstraintLayout>